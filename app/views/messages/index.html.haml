-# .information
-#   グループを編集しました

.wrapper
  = render 'messages/menu'

  .main
    .main-header
      .main-header__title
        こたこまグループ
      .main-header__edit
        Edit
      .main-header__member
        Member：こたこま
      .message
        = render @messages
      .form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = fa_icon 'picture-o', class: 'form__icon'
              = f.file_field :image, class: 'form__hidden'
          = f.submit 'Send', class: 'form__submit-btn'
