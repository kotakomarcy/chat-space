.menu
  .menu-header
    .menu__box
      %h3.menu__box-user
        = current_user.name
      .menu__box-btn
        = link_to new_group_path do
          = fa_icon 'edit', class: "menu__btn--new"
          %span<>
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: "menu__btn--edit"
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message